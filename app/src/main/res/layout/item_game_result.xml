<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/surface">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/result_details_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="133dp"
        app:cardBackgroundColor="@color/surface_high"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/shade_quad">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="49dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/Title.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reward"
                    android:textColor="@color/shade_primary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_coin_stack" />

                    <TextView
                        android:id="@+id/total_score"
                        style="@style/Title.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:textColor="@color/shade_primary"
                        tools:text="1234" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="96dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/surface_high"
                        app:contentPaddingBottom="2dp"
                        app:contentPaddingLeft="8dp"
                        app:contentPaddingRight="8dp"
                        app:contentPaddingTop="2dp"
                        app:strokeColor="@color/shade_quad">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                style="@style/Body.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/correct"
                                android:textColor="@color/shade_primary" />

                            <TextView
                                android:id="@+id/correct_answers_count"
                                style="@style/Label.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/shade_primary"
                                tools:text="10" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="96dp"
                        android:layout_height="48dp"
                        android:layout_marginHorizontal="8dp"
                        app:cardBackgroundColor="@color/surface_high"
                        app:contentPaddingBottom="2dp"
                        app:contentPaddingLeft="8dp"
                        app:contentPaddingRight="8dp"
                        app:contentPaddingTop="2dp"
                        app:strokeColor="@color/shade_quad">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                style="@style/Body.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/correct"
                                android:textColor="@color/shade_primary" />

                            <TextView
                                android:id="@+id/incorrect_answers_count"
                                style="@style/Label.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/shade_primary"
                                tools:text="10" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="96dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/surface_high"
                        app:contentPaddingBottom="2dp"
                        app:contentPaddingLeft="8dp"
                        app:contentPaddingRight="8dp"
                        app:contentPaddingTop="2dp"
                        app:strokeColor="@color/shade_quad">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                style="@style/Body.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/correct"
                                android:textColor="@color/shade_primary" />

                            <TextView
                                android:id="@+id/skipped_answers_count"
                                style="@style/Label.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/shade_primary"
                                tools:text="10" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <ImageView
        android:id="@+id/shine_effect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_result_shape"
        app:layout_constraintStart_toStartOf="@id/ribbon_banner"
        app:layout_constraintEnd_toEndOf="@id/ribbon_banner"
        app:layout_constraintBottom_toTopOf="@id/ribbon_banner"
        app:layout_constraintTop_toTopOf="@id/ribbon_banner" />


    <ImageView
        android:id="@+id/ribbon_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/banner_ribbon"
        app:layout_constraintBottom_toTopOf="@id/result_details_section"
        app:layout_constraintEnd_toEndOf="@id/result_details_section"
        app:layout_constraintStart_toStartOf="@id/result_details_section"
        app:layout_constraintTop_toTopOf="@id/result_details_section" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/great_job"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1980B2"
        android:textFontWeight="600"
        app:layout_constraintBottom_toBottomOf="@id/great_job_text"
        app:layout_constraintEnd_toEndOf="@id/great_job_text"
        app:layout_constraintStart_toStartOf="@id/great_job_text"
        app:layout_constraintTop_toTopOf="@id/great_job_text" />

    <TextView
        android:id="@+id/great_job_text"
        style="@style/Headline.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/great_job"
        android:textColor="@color/on_primary"
        app:layout_constraintBottom_toBottomOf="@id/ribbon_banner"
        app:layout_constraintEnd_toEndOf="@id/ribbon_banner"
        app:layout_constraintStart_toStartOf="@id/ribbon_banner"
        app:layout_constraintTop_toTopOf="@id/ribbon_banner" />

</androidx.constraintlayout.widget.ConstraintLayout>