<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/streakContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/streak_background"
    android:padding="16dp">


    <!-- Fire Icon -->
    <ImageView
        android:id="@+id/fireIcon"
        android:layout_width="48dp"
        android:layout_height="70dp"
        android:contentDescription="@string/fire_image"
        android:src="@drawable/ic_fire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/streakTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fireIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3 day streak, make a big series" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/streakSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/keep_it_up"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/streakTitle"
        app:layout_constraintStart_toStartOf="@id/streakTitle"
        app:layout_constraintTop_toBottomOf="@id/streakTitle" />

    <LinearLayout
        android:id="@+id/dayRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7"
        app:layout_constraintEnd_toEndOf="@+id/streakSubtitle"
        app:layout_constraintStart_toEndOf="@+id/fireIcon"
        app:layout_constraintTop_toBottomOf="@+id/streakSubtitle">

        <include
            android:id="@+id/day1"
            layout="@layout/day_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/day2"
            layout="@layout/day_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/day3"
            layout="@layout/day_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/day4"
            layout="@layout/day_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/day5"
            layout="@layout/day_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/day6"
            layout="@layout/day_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <include
            android:id="@+id/day6"
            layout="@layout/day_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
