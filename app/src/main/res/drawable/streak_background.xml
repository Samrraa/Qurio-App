<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border shape with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1F49BAF2"
                android:centerColor="#FF050C10"
                android:endColor="#1F49BAF2" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Inner solid background -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_high" />
            <corners android:radius="14dp" /> <!-- slightly smaller to fit inside border -->
        </shape>
    </item>

</layer-list>
