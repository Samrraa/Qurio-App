<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#1F49BAF2"
                android:centerColor="#050C10"
                android:endColor="#000012" />

            <corners android:radius="16dp" />
        </shape>
    </item>

    <item

        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#0B0F14" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
