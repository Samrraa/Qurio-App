<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/clipped_corner_card.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Main card background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1D2E"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Top-right corner cutout (white triangle to create the effect) -->
    <item
        android:width="40dp"
        android:height="40dp"
        android:gravity="top|end">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#0D0F1A"/>
                <size
                    android:width="28dp"
                    android:height="28dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>