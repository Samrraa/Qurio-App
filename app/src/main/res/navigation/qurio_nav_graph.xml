<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qurio_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.samrraa.qurioapp.view.splash.SplashFragment"
        android:label="fragment_spalsh"
        tools:layout="@layout/fragment_spalsh">
        <action
            android:id="@+id/action_splashFragment_to_onboarding_fragment"
            app:destination="@id/onboarding_fragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onboarding_fragment"
        android:name="com.samrraa.qurioapp.view.onboarding.OnboardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboarding_fragment_to_home_fragment"
            app:destination="@id/home_fragment" />
    </fragment>

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.samrraa.qurioapp.view.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_fragment_to_question_fragment"
            app:destination="@id/question_fragment" />
    </fragment>

    <fragment
        android:id="@+id/question_fragment"
        android:name="com.samrraa.qurioapp.view.question.QuestionFragment"
        tools:layout="@layout/fragment_question" />


</navigation>